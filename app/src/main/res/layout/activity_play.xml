<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayActivity">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/play_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_margin="16dp"
            android:text="Choose a game mode"/>

        <Button
            android:id="@+id/play_vs_computer_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_text_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:text="Play vs Computer"/>

        <Button
            android:id="@+id/play_vs_player_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/play_vs_computer_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:text="Play vs Player"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>